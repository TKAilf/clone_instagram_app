<% provide(:title, "ログイン")%>
<h1>ログイン画面</h1>
<div class="row justify-content-around">
  <div class="col-md-5">
    <div class="text-center">
      <img src="assets/instagram" class="rounded" alt="Instagram Picture">
    </div>
  </div>
  <div class="my-auto col-md-5 align-self-stretch">
    <%= form_with model: @user do |f| %>
      <div class="my-4 form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.text_field :email, class: "form-control", id: "email", aria: { describedby: "emailHelp"}, placeholder: "メールアドレス" %>
        <small id="emailHelp" class="form-text text-muted">あなたのメールアドレスを不正悪用したりしません</small>
      </div>
      <div class="mb-4 form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.text_field :password, class: "form-control", id: "password", placeholder: "パスワード" %>
      </div>
      <div class="center">
        <button type="submit" class="mb-4 btn btn-primary">ログイン</button>
        <p>アカウントをお持ちではないですか？<%= link_to "登録する", new_user_path, class: "m-1 btn btn-primary"%></p>
      </div>
    <% end %>
  </div>
</div>