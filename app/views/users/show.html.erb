<% provide(:title, @user.name) %>
<%= render 'layouts/header' %>
  <div class="row">
    <div class="col-md-4 font-italic center">
      <h3>
        <%= @user.name %>
      </h3>
      <h1>
        <%= gravatar_for @user %>
      </h1>
      <section class="stats">
      <%= render 'shared/stats' %>
      </section>
    </div>
    <div class="col-md-8">
      <div class="center">
        <%= render 'follow_form' if logged_in? %>
      </div>
      <% if @user.microposts.any? %>
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
          <%= will_paginate @microposts %>
      <% end %>
    </div>
  </div>