<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" role="alert">
      このフォームには<%= pluralize(@user.errors.count, "error") %>が含まれています。
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li> <%= msg %>  </li>
      <% end %>
    </ul>
  </div>
<% end %>